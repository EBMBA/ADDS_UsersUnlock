
<Page
   Name="MainPanel"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
   xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
   xmlns:controlzEx="urn:controlzex"
   xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
   xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Width="1200"
   Height="500"
   RenderOptions.ClearTypeHint="Enabled"
   TextOptions.TextFormattingMode="Display"
   Title="Office 365"
   >
   <!-- BorderThickness="1"
   GlowBrush="{DynamicResource AccentColorBrush}" 
      Topmost="True"/
         WindowStartupLocation="CenterScreen"
         WindowStyle="None"
-->
   <Page.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml"/>
            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml"/>
            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml"/>
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Page.Resources>

  <Grid>
      <StackPanel>
         <StackPanel HorizontalAlignment="Center" Margin="10,10,10,10" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
               <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                  <Image Width="80" Height="80" Source="logo.png">
                  </Image>
                  <Label
                     Margin="5,10,0,0"
                     Content="Gestion"
                     FontSize="30"
                     Foreground="#FF444444">
                  </Label>
                  <Label
                     Margin="0,10,0,0"
                     Content="Office"
                     FontSize="30"
                     Foreground="#5980F1">
                  </Label>
                  <Label
                     Margin="0,10,0,0"
                     Content="365"
                     FontSize="30"
                     Foreground="#FF444444">
                  </Label>
               </StackPanel>
               <StackPanel HorizontalAlignment="Center" Margin="60,-25,0,0" Orientation="Horizontal">
                  <Label
                     Margin="0,0,0,0"
                     Content="PowerShell"
                     FontSize="20"
                     FontWeight="Thin"
                     Foreground="#5980F1">
                  </Label>
               </StackPanel>
            </StackPanel>
         </StackPanel>
         <StackPanel>
            <Canvas Grid.Row="1">
               <TabControl
                  Name="Tabcontrol"
                  Width="1200"
                  Height="325"
                  HorizontalAlignment="Left"
                  Margin="10 10 10 10 "
                  VerticalAlignment="Top"
                  Controls:TabControlHelper.Underlined="SelectedTabItem"
                  TabStripPlacement="Left">
                  <TabItem>
                     <TabItem.HeaderTemplate>
                        <DataTemplate>
                           <StackPanel Orientation="Horizontal">
                              <iconPacks:PackIconFontAwesome
                                 Width="24"
                                 Height="24"
                                 Margin="0 12 0 0 "
                                 Kind="QuestionCircleRegular"/>
                              <Label Margin="2 0 0 0" Content="Info" Foreground="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                           </StackPanel>
                        </DataTemplate>
                     </TabItem.HeaderTemplate>
                     <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal">
                           <StackPanel Orientation="Vertical">
                              <Label
                                 Name="Label"
                                 HorizontalAlignment="Center"
                                 Margin="5"
                                 Content="Domaines Offices 365"/>
                              <DataGrid
                                 Name="Domaines"
                                 Width="450"
                                 Height="180"
                                 Margin="2,2,2,2"
                                 BorderThickness="1"
                                 ColumnWidth="150"
                                 ItemsSource="{Binding}"
                                 SelectionMode="Single">
                                 <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Name}" Header="Nom"/>
                                    <DataGridTextColumn Binding="{Binding Status}" Header="Status"/>
                                    <DataGridTextColumn Binding="{Binding Authentication}" Header="Etat"/>
                                 </DataGrid.Columns>
                              </DataGrid>
                           </StackPanel>
                           <StackPanel Orientation="Vertical">
                              <Label
                                 Name="Admin"
                                 HorizontalAlignment="Center"
                                 Margin="5"
                                 Content="Administrateurs Office 365"/>
                              <DataGrid
                                 Name="DAdmin"
                                 Width="400"
                                 Height="180"
                                 Margin="2,2,2,2"
                                 BorderThickness="1"
                                 ColumnWidth="200"
                                 ItemsSource="{Binding}"
                                 SelectionMode="Single">
                                 <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding EmailAddress}" Header="Email"/>
                                    <DataGridTextColumn Binding="{Binding DisplayName}" Header="Nom"/>
                                 </DataGrid.Columns>
                              </DataGrid>
                           </StackPanel>
                        </StackPanel>
                     </StackPanel>
                  </TabItem>
                  <TabItem>
                     <TabItem.HeaderTemplate>
                        <DataTemplate>
                           <StackPanel Orientation="Horizontal">
                              <iconPacks:PackIconFontAwesome
                                 Width="24"
                                 Height="24"
                                 Margin="0 12 0 0 "
                                 Kind="UsersCogSolid"/>
                              <Label Margin="2 0 0 0" Content="Utilisateurs" Foreground="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                           </StackPanel>
                        </DataTemplate>
                     </TabItem.HeaderTemplate>
                     <StackPanel Margin="5">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                           <StackPanel Orientation="Horizontal">
                              <StackPanel Orientation="Vertical">
                                 <Label
                                    Name="Label2"
                                    HorizontalAlignment="Center"
                                    Margin="5"
                                    Content="Licences Offfices"/>
                                 <DataGrid
                                    Name="SKUO365"
                                    Width="400"
                                    Height="180"
                                    Margin="2,2,2,2"
                                    BorderThickness="1"
                                    ColumnWidth="150"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Single">
                                    <DataGrid.Columns>
                                       <DataGridTextColumn Binding="{Binding AccountSkuId}" Header="Type"/>
                                       <DataGridTextColumn Binding="{Binding ActiveUnits}" Header="Disponible"/>
                                       <DataGridTextColumn Binding="{Binding ConsumedUnits}" Header="UtilisÃ©es"/>
                                    </DataGrid.Columns>
                                 </DataGrid>
                              </StackPanel>
                              <StackPanel Orientation="Vertical">
                                 <Label
                                    Name="UsersWOL"
                                    HorizontalAlignment="Center"
                                    Margin="5"
                                    Content="Utilisateurs sans Licences"/>
                                 <DataGrid
                                    Name="UsersWOLicences"
                                    Width="470"
                                    Height="180"
                                    Margin="2,2,2,2"
                                    BorderThickness="1"
                                    ColumnWidth="200"
                                    ItemsSource="{Binding}"
                                    SelectionMode="Extended">
                                 </DataGrid>
                                 <StackPanel Margin="0 0 0 3" Orientation="Horizontal">
                                    <iconPacks:PackIconFontAwesome
                                       Width="14"
                                       Height="14"
                                       Margin="0 10 2 0 "
                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                       Kind="FilterSolid"/>
                                    <TextBox
                                       Name="FilterTextBox"
                                       Width="172"
                                       Height="26"
                                       HorizontalAlignment="Left"
                                       Margin="2 2 0 0"
                                       VerticalAlignment="Top"
                                       Controls:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(Controls:TextBoxHelper.HasText), Mode=OneWay}"
                                       Controls:TextBoxHelper.Watermark="Filter the Title column"
                                       Text=""
                                       TextWrapping="Wrap"/>
                                    <Label
                                       Name="Count"
                                       Width="172"
                                       Height="26"
                                       HorizontalAlignment="Left"
                                       Margin="2 2 0 0"
                                       VerticalAlignment="Top"
                                       Content=""/>
                                 </StackPanel>
                              </StackPanel>
                           </StackPanel>
                           <StackPanel HorizontalAlignment="Center" Margin="0 5 0 0" Orientation="Horizontal">
                              <Button
                                 Name="Activation"
                                 Width="182"
                                 Height="40"
                                 HorizontalAlignment="Right"
                                 Margin="0,0,0,0"
                                 Background="RoyalBlue"
                                 BorderThickness="0"
                                 Content="Activate"
                                 Foreground="White">
                              </Button>
                           </StackPanel>
                        </StackPanel>
                     </StackPanel>
                  </TabItem>
                  <TabItem>
                     <TabItem.HeaderTemplate>
                        <DataTemplate>
                           <StackPanel Orientation="Horizontal">
                              <iconPacks:PackIconSimpleIcons
                                 Width="24"
                                 Height="24"
                                 Margin="0 12 0 0 "
                                 Kind="MicrosoftTeams"/>
                              <Label Margin="2 0 0 0" Content="Teams" Foreground="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                           </StackPanel>
                        </DataTemplate>
                     </TabItem.HeaderTemplate>
                     <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                           <StackPanel HorizontalAlignment="Left" Margin="5" Orientation="Vertical">
                              <Label
                                 Name="Teams"
                                 HorizontalAlignment="Center"
                                 Margin="5"
                                 Content="Equipes Teams"/>
                              <DataGrid
                                 Name="AllTeams"
                                 Width="600"
                                 Height="180"
                                 Margin="2,2,2,2"
                                 BorderThickness="1"
                                 ColumnWidth="200"
                                 ItemsSource="{Binding}"
                                 SelectionMode="Extended">
                              </DataGrid>
                              <StackPanel Margin="0 0 0 3" Orientation="Horizontal">
                                 <iconPacks:PackIconFontAwesome
                                    Width="14"
                                    Height="14"
                                    Margin="0 10 2 0 "
                                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                    Kind="FilterSolid"/>
                                 <TextBox
                                    Name="FilterTeams"
                                    Width="172"
                                    Height="26"
                                    HorizontalAlignment="Left"
                                    Margin="2 2 0 0"
                                    VerticalAlignment="Top"
                                    Controls:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(Controls:TextBoxHelper.HasText), Mode=OneWay}"
                                    Controls:TextBoxHelper.Watermark="Filter the Title column"
                                    Text=""
                                    TextWrapping="Wrap"/>
                                 <Label
                                    Name="CountT"
                                    Width="172"
                                    Height="26"
                                    HorizontalAlignment="Left"
                                    Margin="2 2 0 0"
                                    VerticalAlignment="Top"
                                    Content=""/>
                              </StackPanel>
                           </StackPanel>
                           <StackPanel HorizontalAlignment="Left" Margin="5" Orientation="Vertical">
                              <Button
                                 Name="Clean"
                                 Width="130"
                                 Height="30"
                                 HorizontalAlignment="Right"
                                 Margin="0,35,0,0"
                                 Background="RoyalBlue"
                                 BorderThickness="0"
                                 Content="Mettoyage"
                                 Foreground="White">
                              </Button>
                              <Button
                                 Name="ListMembers"
                                 Width="130"
                                 Height="30"
                                 HorizontalAlignment="Right"
                                 Margin="0,5,0,0"
                                 Background="#FF68E840"
                                 BorderThickness="0"
                                 Content="Liste des Membres"
                                 Foreground="White">
                              </Button>
                              <CheckBox
                                 Name="Log"
                                 Margin="0 10 0 0"
                                 Content="Fichier de Log"
                                 IsChecked="True"/>
                              <CheckBox Name="Export" Margin="0 5 0 0" Content="Export des membres csv"/>
                           </StackPanel>
                        </StackPanel>
                     </StackPanel>
                  </TabItem>
                  <TabItem>
                     <TabItem.HeaderTemplate>
                        <DataTemplate>
                           <StackPanel Orientation="Horizontal">
                              <iconPacks:PackIconFontAwesome
                                 Width="24"
                                 Height="24"
                                 Margin="0 12 0 0 "
                                 Kind="KeySolid"/>
                              <Label Margin="2 0 0 0" Content="Passwd" Foreground="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                           </StackPanel>
                        </DataTemplate>
                     </TabItem.HeaderTemplate>
                     <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                           <StackPanel HorizontalAlignment="Left" Margin="5" Orientation="Vertical">
                              <StackPanel Margin="0 0 0 3" Orientation="Horizontal">
                                 <iconPacks:PackIconFontAwesome
                                    Width="14"
                                    Height="14"
                                    Margin="0 10 2 0 "
                                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                    Kind="FilterSolid"/>
                                 <TextBox
                                    Name="FilterUsers"
                                    Width="172"
                                    Height="26"
                                    HorizontalAlignment="Left"
                                    Margin="2 2 0 0"
                                    VerticalAlignment="Top"
                                    Controls:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(Controls:TextBoxHelper.HasText), Mode=OneWay}"
                                    Controls:TextBoxHelper.Watermark="Filter the Title column"
                                    Text=""
                                    TextWrapping="Wrap"/>
                              </StackPanel>
                              <DataGrid
                                 Name="Allusers"
                                 Width="500"
                                 Height="180"
                                 Margin="2,2,2,2"
                                 BorderThickness="1"
                                 ColumnWidth="200"
                                 ItemsSource="{Binding}"
                                 SelectionMode="Extended">
                              </DataGrid>
                           </StackPanel>
                           <StackPanel Margin="20 37 0 0" Orientation="Vertical">
                              <GroupBox>
                                 <GroupBox.HeaderTemplate>
                                    <DataTemplate>
                                       <StackPanel Orientation="Horizontal">
                                          <TextBlock Margin="2" VerticalAlignment="Center" Text="Options"/>
                                       </StackPanel>
                                    </DataTemplate>
                                 </GroupBox.HeaderTemplate>
                                 <StackPanel Orientation="Vertical">
                                    <CheckBox
                                       Name="Generate"
                                       Margin="2"
                                       Content="GÃ©nÃ©ration du fichier word"
                                       IsChecked="True"/>
                                    <CheckBox Name="Emails" Margin="2" Content="Adresse mail personalisÃ©e"/>
                                    <CheckBox Name="CCemail" Margin="2" Content="Cc Administrateurs du tenant Office"/>
                                 </StackPanel>
                              </GroupBox>
                              <StackPanel Orientation="Vertical">
                                 <StackPanel Orientation="Horizontal">
                                    <Controls:MetroHeader Margin="2 10 0 0" Header="Adresse e-mail">
                                       <Controls:MetroHeader.HeaderTemplate>
                                          <DataTemplate>
                                             <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <iconPacks:PackIconFontAwesome VerticalAlignment="Center" Kind="AtSolid"/>
                                                <TextBlock
                                                   Width="200"
                                                   Margin="2 0 0 0"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding}"/>
                                             </StackPanel>
                                          </DataTemplate>
                                       </Controls:MetroHeader.HeaderTemplate>
                                       <TextBox
                                          Name="EmailPerso"
                                          Controls:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(Controls:TextBoxHelper.HasText), Mode=OneWay}"
                                          Controls:TextBoxHelper.Watermark="Adresse e-mail"
                                          IsEnabled="False"
                                          Text=""/>
                                    </Controls:MetroHeader>
                                 </StackPanel>
                                 <StackPanel Orientation="Horizontal">
                                    <Controls:MetroHeader Margin="2 10 0 0" Header="Mot de passe">
                                       <Controls:MetroHeader.HeaderTemplate>
                                          <DataTemplate>
                                             <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <iconPacks:PackIconModern Kind="InterfacePassword"/>
                                                <TextBlock
                                                   Width="200"
                                                   Margin="2 0 0 0"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding}"/>
                                             </StackPanel>
                                          </DataTemplate>
                                       </Controls:MetroHeader.HeaderTemplate>
                                       <PasswordBox
                                          Name="Passwd_R"
                                          Width="200"
                                          Controls:TextBoxHelper.ClearTextButton="{Binding RelativeSource={RelativeSource Self}, Path=(Controls:TextBoxHelper.HasText), Mode=OneWay}"
                                          Controls:TextBoxHelper.IsWaitingForData="True"
                                          Controls:TextBoxHelper.Watermark="mot de passe"
                                          PasswordChar="*"
                                          Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"/>
                                    </Controls:MetroHeader>
                                 </StackPanel>
                              </StackPanel>
                              <StackPanel
                                 HorizontalAlignment="Left"
                                 Margin="5 0 0 0"
                                 VerticalAlignment="Bottom"
                                 Orientation="Horizontal">
                                 <Button
                                    Name="ChgePwd"
                                    Width="130"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    Margin="0,15,5,0"
                                    VerticalAlignment="Top"
                                    Background="RoyalBlue"
                                    BorderThickness="0"
                                    Content="Change Password"
                                    Foreground="White">
                                 </Button>
                                 <Button
                                    Name="EMail"
                                    Width="130"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    Margin="0,15,0,0"
                                    VerticalAlignment="Top"
                                    Background="#FF68E840"
                                    BorderThickness="0"
                                    Content="E-Mail"
                                    Foreground="White">
                                 </Button>
                              </StackPanel>
                           </StackPanel>
                        </StackPanel>
                     </StackPanel>
                  </TabItem>
               </TabControl>
            </Canvas>
         </StackPanel>
      </StackPanel>
   </Grid>
</Page>